mixin team-card(data)
    .col-md-6.col-lg-4.scroll-animate.scroll-animate-fadeInUp
        .team-card.modal-trigger.md-setperspective.ajax-modal(data-modal='team-modal' href='#' data-path='data/member-modal.txt')
            .team-card__img
                +srcsetRetinaImg(data.img, 'jpg')
            .team-card__content
                .team-card__info
                    .team-card__name=data.name
                    .team-card__post=data.post
                span.team-card__btn
                    +icon('user')
